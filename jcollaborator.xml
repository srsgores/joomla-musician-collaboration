<?xml version="1.0" encoding="utf-8"?>
<extension type = "component" version = "3.0" client = "site" method = "upgrade">
	<name>Joomla Music Collaborator</name>
	<author>Sean Goresht, Jobelle Firme, Nikolas Valera</author>
	<creationDate>December 2012</creationDate>
	<copyright>Copyright Â© 2012, GPL 2.0</copyright>
	<license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
	<authorEmail>seangores@gmail.com</authorEmail>
	<authorUrl>http://seangoresht.com.com</authorUrl>
	<version>3.0.0</version>
	<scriptfile>install.php</scriptfile>
	<description>JomCollaborator is a component to facilitate musician networking.
	</description>
	<files>
		<filename component = "com_jcollaborator">jcollaborator.php</filename>
		<filename>controller.php</filename>
		<filename>index.html</filename>
		<folder>views/</folder>
		<folder>css</folder>
		<folder>js</folder>
		<folder>media</folder>
		<folder>fonts</folder>
	</files>
	<administration>
		<menu link = "option=com_jcollaborator">JCollaborator</menu>
		<files>
			<filename component = "com_jcollaborator">jcollaborator.php</filename>
		</files>
	</administration>
	<install folder = "sql">
		<sql>
			<file driver = "mysql" charset = "utf8">install.sql</file>
		</sql>
	</install>
</extension>